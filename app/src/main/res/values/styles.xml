<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/transparent_btn_bg</item>
        <item name="android:backgroundTint">@color/light_yellow</item>

        <item name="android:minWidth">88dp</item>
        <item name="android:height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.03</item>
        <!--        <item name="android:fontFamily">@font/your_font_family</item>-->
    </style>

    <style name="InputText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/input_text_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="Widget.Theme.HealthCareApp.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
    </style>
</resources>
