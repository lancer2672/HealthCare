<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bot_avt"
        android:layout_width="@dimen/large_space"
        android:layout_height="@dimen/large_space"
        android:layout_alignParentLeft="true"

        android:layout_marginStart="@dimen/extremely_small"
        android:layout_marginTop="12dp"

        android:layout_marginEnd="@dimen/extremely_small"
        android:layout_marginBottom="@dimen/extremely_small"
        android:src="@drawable/chat_bot" />

    <TextView
        android:id="@+id/chat_receiver_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/extremely_small"
        android:layout_marginTop="@dimen/extremely_small"
        android:layout_marginEnd="@dimen/extremely_small"
        android:layout_marginBottom="@dimen/extremely_small"
        android:layout_toRightOf="@id/bot_avt"
        android:background="@drawable/receiver_shape"
        android:fontFamily="@font/poppins_regular"
        android:padding="@dimen/extremely_small"
        android:text="aysuhvish"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>