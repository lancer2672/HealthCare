<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background"
        tools:context=".ui.fragments.ReminderSetting">
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_heading_1"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="Setting" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_marginLeft="12dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Amount of water (ml)"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size_medium"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="4dp"
                    android:spinnerMode="dialog"
                    android:id="@+id/tv_max_progress"
                    android:text="2000"
                    android:textSize="@dimen/font_size_medium"
                    android:layout_marginRight="12dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_marginLeft="12dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Interval time"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size_medium"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:padding="4dp"
                    android:spinnerMode="dialog"
                    android:id="@+id/spn_interval_time"
                    android:textSize="@dimen/font_size_medium"
                    android:layout_marginRight="12dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_marginLeft="12dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Wake-up time"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size_medium"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="12:12"
                    android:padding="4dp"
                    android:id="@+id/tv_wake_up_time"
                    android:textSize="@dimen/font_size_medium"
                    android:layout_marginRight="12dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_marginLeft="12dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Sleep time"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size_medium"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="12:12"
                    android:padding="4dp"
                    android:id="@+id/tv_bed_time"
                    android:textSize="@dimen/font_size_medium"
                    android:layout_marginRight="12dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
